            android:theme="?attr/actionBarTheme"
            app:titleTextColor="#FFFFFF" />

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="621dp"
            android:layout_weight="1"
            android:background="#F1F1F1">

            <LinearLayout
