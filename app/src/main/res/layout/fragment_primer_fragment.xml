<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".Primer_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="50dp"
            android:paddingTop="50dp"
            android:paddingRight="50dp"
            android:src="@drawable/carparking" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_titulos"
            android:fontFamily="@font/lato_bold"
            android:text="Ingreso al Parking"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_registrar_ingreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:drawableRight="@drawable/baseline_app_registration_24"
                android:fontFamily="@font/open_sans_bold"
                android:padding="18sp"
                android:text="REGISTRAR"
                android:textSize="15sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn_lista_ingreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:drawableRight="@drawable/baseline_checklist_24"
                android:fontFamily="@font/open_sans_bold"
                android:padding="18sp"
                android:text="LISTA"
                android:textSize="15sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/btn_salida_ingreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:drawableRight="@drawable/baseline_logout_24_white"
                android:fontFamily="@font/open_sans_bold"
                android:padding="18sp"
                android:text="SALIDA"
                android:textSize="15sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>